<form id="listForm" class="label-hidden">
    <div class="form-element">
        <label>Name</label>
        <input class="name" type="text" placeholder="list name" />
    </div>

    <div class="form-element">
        <label>Tags</label>
        <input class="tags" type="text" placeholder="tags" />
    </div>

    <div class="form-buttons">
        <button data-action="add-new-list" class="btn">Add list</button>
    </div>
</form>