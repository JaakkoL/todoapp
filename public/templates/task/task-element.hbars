<li data-taskid={{ this.taskId }} {{#if_eq this.status 1}}class="done"{{/if_eq}}>
    <div class="view">
      <input class="status" type="checkbox" {{#if_eq this.status 1}}checked{{/if_eq}} />
      <span class="label">{{ this.text }}</span>
      <a class="delete">&times;</a>
    </div>

  <input class="edit" type="text" value="{{ this.text }}" />
</li>